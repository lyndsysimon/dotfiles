# --- Aliases {{{
which lolcat > /dev/null 2>&1
if [ $? = 0 ]
then
    alias cat='lolcat'
fi

alias fucking='sudo'

# - Development

alias g='git '
alias i='invoke'

which nvim 1>/dev/null
if [ $? -eq 0 ]
then
    alias v='nvim'
    alias vim='nvim'
else
    alias v='vim'
fi
alias m='python manage.py'

