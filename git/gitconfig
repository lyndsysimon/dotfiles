# Location: ~/.gitconfig
# vim: :set filetype=dosini:

[alias]
    # add changes to tracked files, but confirm each chunk manually
    a = add -p .
    # show diff between HEAD and what's staged for commit
    ds = diff --cached
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    type = cat-file -t
    dump = cat-file -p
[user]
    name = Lyndsy Simon
    email = lyndsy@lyndsysimon.com
[credential]
    helper = osxkeychain
[core]
    excludesfile = ~/.config/git/gitignore
    editor = nvim
[init]
    templatedir = ~/.config/git/templates
[color]
    ui = true
[colors]
    ui = true
    diff = true
    status = true
[merge]
    tool = vimdiff
[push]
    default = current
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[hub]
    protocol = ssh
