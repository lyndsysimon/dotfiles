# Location: ~/.gitconfig
# vim: :set filetype=dosini:

[alias]
    # add changes to tracked files, but confirm each chunk manually
    a = add -p .
    # show diff between HEAD and what's staged for commit
    ds = diff --cached
    dl = diff HEAD~1..HEAD
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:'[%C(green)%h%C(reset)] (%C(yellow)%ad%C(reset)) %C(white)%s %C(blue)[%an]%C(red bold)%d' --graph --date=relative
    type = cat-file -t
    dump = cat-file -p
    gud = push -f
    recent-branches = for-each-ref --sort=-committerdate refs/heads/ | head | sed "s/refs.heads.//g"
    # check out the most recent previous branch
    back = "!f() { git reflog | grep \": checkout:\"  | head -n 1 | awk '{ print $6 }'; }; git checkout `f`"
[user]
    name = Lyndsy Simon
    email = lyndsy@lyndsysimon.com
[credential]
    helper = osxkeychain
[core]
    excludesfile = ~/.config/git/gitignore
    editor = vim
[init]
    templatedir = ~/.config/git/templates
[color]
    ui = true
[colors]
    ui = true
    diff = true
    status = true
[merge]
    tool = vimdiff
[push]
    default = current
    followTags = true
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[hub]
    protocol = ssh
[url "git@github.com:"]
    insteadOf=gh:
[url "git@gitlab.com:"]
    insteadOf=gl:
